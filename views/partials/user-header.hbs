<script>
 
  function searchFilterKey(){
    var searchValue = document.getElementsByClassName('keyword-search112')[0].value
      if(searchValue===''){
        document.getElementById('searchError').style.display='block'
        setTimeout(()=>{
          document.getElementById('searchError').style.display='none'
        },1200)
      }else{
        $.ajax({
          url:'/search/'+searchValue,
          method:'get',
          success:(response)=>{
           location.href = '/search/hello-world/undefined'     
          }
        })
      }
  }

</script>

