<section class="w3l-main-slider position-relative" id="home">
	<div class="companies20-content">
		<div class="owl-one owl-carousel owl-theme">
			{{#each randomDetails}}
			<div class="item">
				<li>
					<div style="" class="slider-info banner-view bg bg2">
						<img style="position: relative; no-repeat center" src="/movieImages/{{this._id}}Cover_photo.jpg"
							width="100%" height="100%" alt="">
						<div style="position: absolute;" class="banner-info">
							<h3>{{this.Movie}}</h3>
							<p>{{this.Language}} {{this.Type}} Movie</p>
							{{!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit.<span class="over-para">
									Consequuntur hic odio
									voluptatem tenetur consequatur.</span></p> --}}
							<a href="#small-dialog{{this._id}}" class="popup-with-zoom-anim play-view1">
								<span class="video-play-icon">
									<span class="fa fa-play"></span>
								</span>
								<h6>Watch Trailer</h6>
							</a>

							<!-- dialog itself, mfp-hide class is required to make dialog hidden -->
							<div style=" max-width: 750px;
  										margin: 40px auto;
  										position: relative;" id="small-dialog{{this._id}}" class="zoom-anim-dialog mfp-hide">
								<iframe style="width: 100%;
                                     	 height: 400px;
                                     	 display: block;
                                     	 border-radius: 10px;
                                     	 " src="{{this.Teaser}}" allow="autoplay; fullscreen"
									allowfullscreen=""></iframe>
							</div>
						</div>
					</div>
				</li>
			</div>
			{{/each}}
		</div>
	</div>
</section>
<!-- //banner-slider-->
<section class="w3l-grids">
	<div class="grids-main py-5">
		<div class="container py-lg-3">
			<div class="headerhny-title">
				<div class="w3l-title-grids">
					<div class="headerhny-left">
						<h3 class="hny-title"> Released Movie</h3>
					</div>
					<div class="headerhny-right text-lg-right">
						<h4><a class="show-title" href="/movies">Show all</a></h4>
					</div>
				</div>
			</div>
			
			<div class="owl-three owl-carousel owl-theme">
				{{#each releasedMovie}}
				<div onclick="movieSingleView('{{this._id}}')" class="item vhny-grid">
					<div  class="box16 mb-0">
						<a>
							<figure>
								<img  class="img-fluid" src="/movieImages/{{this._id}}Poster_photo.jpg" alt="">
							</figure>
							<div  class="box-content">
								
								<h4> <span class="post"><span class="fa fa-clock-o"> </span> {{this.Hours}} Hour

									</span>

									{{!-- <span class="post fa fa-heart text-right"></span> --}}
								</h4>
							</div>
							{{!-- <span class="fa fa-play video-icon" aria-hidden="true"></span> --}}
						</a>
					</div>
					<h3 class="released112movie"> <a class="title-gd" >{{this.Movie}}</a></h3>
					{{!-- <p>Lorem ipsum dolor sit amet consectetur adipisicing elit</p> --}}
					<div class="button-center text-center mt-4">
						<a href="/booking-movie/{{this._id}}" class="btn watch-button">Book now</a>
					</div>
				</div>
				{{/each}}
			</div>
			
		</div>

	</div>
</section>
<script>
	function movieSingleView(movieId){
		location.href = '/single-view/'+movieId
	}
</script>

