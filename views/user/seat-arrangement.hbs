<style>
    .seats {
        width: 9vw;
        height: 9vw;
        color: white;
        font-size: 15px;
        text-align: center;
    }

    @media(max-width:850px) {
        .seats {
            font-size: 12px;
        }
    }

    @media(min-width:360px) {
        .seats {
            width: 33px;
            height: 33px;
        }
    }

    @media(min-width:500px) {
        .seats {
            width: 6vw;
            height: 6vw;
        }
    }

    @media(min-width:660px) {
        .seats {
            width: 40px;
            height: 40px;
        }
    }

    @media(min-width:760px) {
        .seats {
            width: 44px;
            height: 44px;
        }
    }

    @media(min-width:850px) {
        .seats {
            width: 50px;
            height: 50px;
        }
    }

    #scrollbox {
        animation: colorchange 14s linear 1s infinite;
        /* animation-name followed by duration in seconds*/
        /* you could also use milliseconds (ms) or something like 2.5s */
        -webkit-animation: colorchange 14s linear 0s infinite alternate;
        /* Chrome and Safari */
    }

    @keyframes colorchange {
        0% {
            background: rgba(165, 0, 0, 0.651);
            color: cyan;
        }

        33% {
            background: rgba(0, 130, 0, 0.651);
            color: magenta;
        }

        66% {
            background: rgba(18, 107, 191, 0.623);
            color: yellow;
        }

        100% {
            background: rgba(138, 0, 0, 0.582);
            color: cyan;
        }
    }

    @-webkit-keyframes colorchange

    /* Safari and Chrome - necessary duplicate */
        {
        0% {
