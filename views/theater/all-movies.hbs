<script src="https://kit.fontawesome.com/a73f9c0e98.js" crossorigin="anonymous"></script>

<div class="container table-responsive" style="margin-top: 94px; ">

    <table style="width: 800px; " id="datatablesSimple" class="table">
        <thead>
            <tr>
                <th scope="col">Movie</th>
                <th scope="col">Language</th>
                <th scope="col">Movie State</th>
                <th scope="col">Hour</th>
                <th scope="col">Edit</th>
                
            </tr>
        </thead>
        <tbody>
            {{#each allMovies}}
            <tr>
                <td>{{this.Movie}}</td>
                <td>{{this.Language}}</td>
                <td>{{this.Movie_state}}</td>
                <td>{{this.Hours}} hours</td>
                <td><a href="/theater-management/edit-movies/{{this._id}}"><i class="fas fa-edit text-info"></i></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script>
    $(document).ready(function () {
        $('#datatablesSimple').DataTable();
    });
</script>
